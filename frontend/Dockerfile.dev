FROM node:22

WORKDIR /app

# Copy package files and install dependencies
COPY stud_assistant/package*.json ./
RUN npm install

# Source code will be mounted via volume
EXPOSE 5173

# Start Vite dev server on 0.0.0.0 so it's accessible from outside container
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
