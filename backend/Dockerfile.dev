FROM python:3.11-slim

WORKDIR /backend

# Install system dependencies
RUN apt-get update && apt-get install -y git gcc postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt uvicorn[standard]
# Copy application code (useful when not mounting a volume)
COPY app/ app/

# Code will usually be mounted via volume in development
EXPOSE 8000

# Default command (can be overridden in docker-compose)
# Use the full module path so imports work reliably: app.main:app
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
